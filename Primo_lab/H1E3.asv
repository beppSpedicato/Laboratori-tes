%% esercizio 3.c

n = -10 : 10;
A = 5;              % sempre per esempio
N = 5;              %periodo della sinusoide
x = A.*exp(-(2*1i*pi.*n)./N);

% stampo la parte reale e immaginarie separate
figure  
set(gca, 'FontSize', 18);
stem(n, real(x), 'r');
xlabel('n');
ylabel('Re{x(n)}');
title('x = Ae^-^j^2^p^i^n^/^N ');
axis([-10 10 -10 10]);
grid on;

figure
set(gca, 'FontSize', 18);
stem(n, imag(x), 'r');
xlabel('n');
ylabel('Img{x(n)}');
title('x = Ae^-^j^2^p^i^n^/^N ');
axis([-10 10 -10 10]);
grid on;


